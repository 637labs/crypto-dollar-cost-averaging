{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Tradebot",
            "type": "shell",
            "command": "docker build . -t crypto-tradebot:local",
            "options": {
                "cwd": "${workspaceFolder}/tradebot",
                "env": {
                    "BASH_ENV": "${workspaceFolder}/.vscode/local.env"
                }
            },
        },
        {
            "label": "Build Schedule Fanout",
            "type": "shell",
            "command": "docker build . -t schedule-fanout:local",
            "options": {
                "cwd": "${workspaceFolder}/schedule_fanout",
                "env": {
                    "BASH_ENV": "${workspaceFolder}/.vscode/local.env"
                }
            },
        },
        {
            "label": "Build Services",
            "dependsOn": [
                "Build Tradebot",
                "Build Schedule Fanout"
            ],
            "group": "build"
        },
        {
            "label": "Run Services",
            "dependsOn": [
                "Build Services"
            ],
            "type": "shell",
            "command": "gcloudProject=$GCLOUD_PROJECT_ID localDevHome=$LOCAL_DEV_HOME tradebotTopic=$TRADEBOT_PUBSUB_TOPIC docker-compose -f docker-compose.yml up",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "BASH_ENV": "${workspaceFolder}/.vscode/local.env"
                }
            },
            "problemMatcher": []
        },
    ]
}